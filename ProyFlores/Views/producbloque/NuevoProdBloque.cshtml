@model ProyFlores.Models.ViewModelsBloque.BloqueViewModel
@{
    ViewBag.Title = "Registro produccion de Bloque";

}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("NuevoProdBloque", "producbloque", FormMethod.Post))
{

    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 text-md-center">
                    <b> <label> Datos al Año</label> </b>
                </div>

                <div class="row text-center">
                    <div class="col-md-4">
                        <b><label class="text-center">Presupuestado </label></b>
                        @Html.TextBoxFor(d => d.Presupuestadoaño, "", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        <b><label class="text-center">Llevamos</label></b>
                        @Html.TextBoxFor(d => d.Llevamosaño, "", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        <b><label class="text-center">D</label></b>
                        @Html.TextBoxFor(d => d.Diferenciaaño, "", new { @class = "form-control" })
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="container">
        <div class="form-group">
            <div class="row">

                <div class="col-md-12 text-md-center">
                    <b> <label> Datos al Mes</label> </b>
                </div>

                <div class="row text-center">
                    <div class="col-md-4">
                        <b><label class="text-center">Presupuestado </label></b>
                        @Html.TextBoxFor(d => d.Presupuestadomes, "", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        <b><label class="text-center">Llevamos </label></b>
                        @Html.TextBoxFor(d => d.Llevamosmes, "", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        <b><label class="text-center">D </label></b>
                        @Html.TextBoxFor(d => d.Diferenciames, "", new { @class = "form-control" })
                    </div>

                </div>

            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="form-group">
            <div class="row">

                <div class="col-md-12 text-md-center">
                    <b> <label> Datos adicionales</label> </b>
                </div>

                <div class="row text-center">
                    <div class="col-md-4">
                        <b><label class="text-center">Numero bloque </label></b>
                        @Html.TextBoxFor(d => d.Numerobloque, "", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        <b><label class="text-center">Cedula  </label></b>
                        @Html.TextBoxFor(d => d.Cedula, "", new { @class = "form-control" })
                    </div>

                    <div class="col-md-4">
                        <b><label class="text-center">dato invernadero </label></b>
                        @Html.TextBoxFor(d => d.Idinvernadero, "", new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div style="text-align:right">
        <input value="Guardar" class="btn btn-primary" type="submit" />
    </div>
}

